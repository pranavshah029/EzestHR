				$("#err_email").hide();
			});

             $('#reason').focusin(function(){
				$("#err_reason").hide();
			});
              $('#reason').focusout(function(){
                validate_reason();
        	});

            $('#whom').focusin(function(){
				$("#err_whom").hide();
			});
            $('#whom').focusout(function(){
                validate_whom();
        	});



});

   


