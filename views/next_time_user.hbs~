			$("#err_email").hide();
			$("#err_number").hide();
            $('#err_reason').hide();
            $('#err_whom').hide();

		
  $('#username').focusout(function(){
				ValidateName();
				
			});
			$('#username').focusin(function(){
				$("#err_name").hide();
				
			});

			$('#contact').focusout(function(){
				ValidatePhone();
			});
			$('#contact').focusin(function(){
				$("#err_number").hide();
			});

