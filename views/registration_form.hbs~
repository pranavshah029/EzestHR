<script type="text/javascript">
function Validate1()
{
 if( ValidateName()==true &&
   ValidateEmail()==true &&
   ValidatePhone()==true &&
   ValidateID()==true &&
   validate_reason()==true &&
   validate_whom() ==true){
      return incrementValue();
     
   }
   else{
     //console.log("Hii")
   }
}
function ValidatePhone()
{
  var phone=document.getElementById("contact");
  var phoneno = /^\(?([0-9]{3})\)?[-. ]?([0-9]{3})[-. ]?([0-9]{4})$/;
  if(phone.value.match(phoneno))
        {
          
      return true;
        }
      else
        {
          $("#err_number").show();
        return false;
        }
}
function ValidateEmail()
{
var x=document.getElementById("email");
var mailformat = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
if(x.value.match(mailformat))
{
return true;
}
else
{
  $("#err_email").show();
return false;
}
}

function ValidateName(){
  var len=$("#username").val().length;
  var letters = /^[A-Za-z]+$/;
      if(username.value.match(letters) && len>3)
				{
          return true;
				}
				else{
          $("#err_name").show();
					return false;
					
				}
			}

 

function id_no_show(){
      $("#id_no").show();
    }


function ValidateID(){
   var id_no=$('#id_no').val();
   if(id_no !=''){
     return true;
   }
   else{
    $("#err_id").show();
     return false
   }
 }     

 function validate_reason(){
  var reason=$('#reason').val();
   if(reason !=''){
     return true;
   }
   else{
    $("#err_reason").show();
     return false
   }
 }     

 function validate_whom(){
  var whom=$('#whom').val();
   if(whom !=''){
     return true;
   }
   else{
    $("#err_whom").show();
     return false
   }
 }     
 


 function incrementValue()
{   
    var today = new Date();
    var dd = today.getDate();
    var mm = today.getMonth()+1; //January is 0!
    var yyyy = today.getFullYear();
    if(dd<10){
    dd='0'+dd;
             } 
     if(mm<10){
       mm='0'+mm;
             } 
    var date = dd+''+mm+''+yyyy;
    //var value = parseInt(document.getElementById('number').value,0);
    //value = isNaN(value) ? 0 : value;
    var value=0;
    value++;
    var d =date + value;
    //document.getElementById('number').value = value;
    //document.getElementById('num').value = d; 
    alert(d);
    document.getElementByID('GID').value=d;
}



</script>
